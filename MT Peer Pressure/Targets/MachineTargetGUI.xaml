<UserControl x:Class="MT_Peer_Pressure.Targets.MachineTargetGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 >
    <Grid>
		<Grid.RowDefinitions >
			<RowDefinition Height="25"/>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Name="Main" Grid.Row="0" Orientation="Horizontal">
			<Label Content="Machine:" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
			<TextBlock Width="100" Name="MachineName" Text="" />
			<Button Name="ShowPanel" Content="get"/>
		</StackPanel>
		<StackPanel Name="Choice" Grid.Row="1" Orientation="Horizontal" Visibility="Hidden">
			<TreeView HorizontalAlignment="Left" Name="machineTree" />
			<Button Content="Select" Height="23" Name="choose" Width="45" />
		</StackPanel>
	</Grid>
</UserControl>
